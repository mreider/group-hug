<p>
<%= link_to "Post Message", url_for(new_group_post_path(@group.id)) %>
</p>
<% @posts.each do |post| %>
<div class="post">
<span class="pic"><fb:profile-pic uid="<%=post.from.id%>" linked="false" size="q"></fb:profile-pic><br/>
<%=post.from.first_name :last_name%> <%=post.from.last_name%>
</span>
<span>
<%=post.message%><br/> 
<%= time_ago_in_words(post.updated_time) %> ago
</span>
</div> 		
<% end %>

<br/><br/>
