
<%= link_to "Post", url_for(new_group_post_path(@group.id)) %>


<% @posts.each do |post| %>

  <%#=post.from.inspect%>
<div class="posts">
  <span class="innards">
    <fb:profile-pic uid="<%=post.from.id%>" linked="false" size="q"></fb:profile-pic>
  </span>
  <span class="innards">
    <%=post.message%><br/> 
    <%= time_ago_in_words(post.updated_time) %> ago
  </span>
</div>

<% end %>
